<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.codingpixel.undiscoveredarchives.view_models.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.faltenreich.skeletonlayout.SkeletonLayout
            android:id="@+id/skeletonLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:maskColor="#F4F4F4"
            app:maskCornerRadius="20dp"
            app:shimmerColor="#E6E6E6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="112dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="6dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="46dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="4dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="112dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="6dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="46dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="4dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="112dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="6dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="46dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="4dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="112dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="6dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="46dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="4dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="112dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="6dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />

                        <View
                            android:layout_width="46dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="4dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="10dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp" />
                </LinearLayout>
            </LinearLayout>
        </com.faltenreich.skeletonlayout.SkeletonLayout>


        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/topBar"
                    layout="@layout/layout_toolbar" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSearch"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/white"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/topBar">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawableStart="@drawable/ic_search_home"
                        android:drawablePadding="7dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_vertical"
                        android:hint="Search"
                        android:imeOptions="actionSearch"
                        android:lines="1"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingHorizontal="12dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:textSize="13sp" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/ivSearchCross"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_cross_search"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/cvSearch"
                    app:layout_constraintRight_toRightOf="@id/cvSearch"
                    app:layout_constraintTop_toTopOf="@id/cvSearch" />

                <Spinner
                    android:id="@+id/filter"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/transparent"
                    android:dropDownWidth="match_parent"
                    android:spinnerMode="dropdown"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ivFilter"
                    app:layout_constraintTop_toBottomOf="@id/cvSearch" />

                <TextView
                    android:id="@+id/tvFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="All"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:drawableRightCompat="@drawable/ic_spinner_black"
                    app:layout_constraintBottom_toBottomOf="@id/filter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/filter" />

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_filter"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvSearch" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:scrollbarSize="5dp"
                    android:scrollbarThumbVertical="@color/black"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivFilter"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_favorites" />


                <LinearLayout
                    android:id="@+id/llNoData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="no_result.json"
                        app:lottie_loop="true"
                        app:lottie_speed="1" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:fitsSystemWindows="true">

                <include
                    android:id="@+id/navigationView"
                    layout="@layout/navigation_view" />
            </com.google.android.material.navigation.NavigationView>

        </androidx.drawerlayout.widget.DrawerLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>