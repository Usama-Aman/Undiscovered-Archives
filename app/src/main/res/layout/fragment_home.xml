                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            app:cardBackgroundColor="@color/lighter_grey"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp" />


                        <View
                            android:layout_width="100dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:textColor="@color/darker_grey"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            app:cardBackgroundColor="@color/lighter_grey"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp" />


                        <View
                            android:layout_width="100dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:textColor="@color/darker_grey"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            app:cardBackgroundColor="@color/lighter_grey"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp" />


                        <View
                            android:layout_width="100dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:textColor="@color/darker_grey"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="100dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:text="Top Designers"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="View All"
                        android:textColor="@color/view_more_grey"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp">

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            app:cardBackgroundColor="@color/lighter_grey"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp" />

                        <View
                            android:layout_width="200dp"
                            android:layout_height="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="Featured Products"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:text="We know your expectations about clothes. Outfits that will make you comfortably beautiful."
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            app:cardBackgroundColor="@color/lighter_grey"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp" />

                        <View
                            android:layout_width="200dp"
                            android:layout_height="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="Featured Products"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

